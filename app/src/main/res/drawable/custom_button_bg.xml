<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#0077B6"/>  <!-- Change this color to your desired button color -->
            android:endColor="#005D91"    <!-- Change this color to your desired button color -->
            android:type="linear" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#005D91"/>  <!-- Change this color to your desired button color when pressed -->
            android:endColor="#0077B6"    <!-- Change this color to your desired button color when pressed -->
            android:type="linear" />
        </shape>
    </item>
</selector>
